<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Masterclass Neurociência - Joyce Genova</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
    <style>
        :root { --navy: #0f172a; --gold: #b8924a; --bg: #f8fafc; --white: #ffffff; --slate: #64748b; }
        * { box-sizing: border-box; }
        body { font-family: 'Montserrat', sans-serif; background: var(--bg); margin: 0; display: flex; justify-content: center; min-height: 100vh; overflow: hidden; }
        
        #workbook {
            width: 100%; max-width: 900px; height: 100vh; background: var(--white);
            display: flex; flex-direction: column; position: relative;
        }

        .progress-bar { height: 6px; background: #e2e8f0; width: 100%; }
        #fill { height: 100%; background: var(--gold); width: 1.25%; transition: 0.4s; }

        .viewport { flex-grow: 1; overflow-y: auto; padding: 40px; scroll-behavior: smooth; }
        .page { display: none; animation: fadeIn 0.4s ease; }
        .page.active { display: block; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

        h1, h2 { font-family: 'Playfair Display', serif; color: var(--navy); }
        .img-box { width: 100%; height: 350px; border-radius: 12px; object-fit: cover; margin-bottom: 20px; }
        .fact-card { background: #f1f5f9; padding: 20px; border-left: 5px solid var(--gold); margin: 20px 0; }
        
        .controls { padding: 20px; background: #fff; border-top: 1px solid #eee; display: flex; justify-content: space-between; align-items: center; }
        .btn { padding: 12px 25px; border-radius: 50px; border: none; cursor: pointer; font-weight: 700; transition: 0.3s; }
        .btn-next { background: var(--navy); color: white; }
        .btn-prev { background: #cbd5e1; color: var(--navy); }
    </style>
</head>
<body>

<div id="workbook">
    <div class="progress-bar"><div id="fill"></div></div>
    
    <div class="viewport" id="view">
        <div id="pages-container"></div>
    </div>

    <div class="controls">
        <button class="btn btn-prev" onclick="move(-1)" id="bPrev">Anterior</button>
        <div id="pCount" style="font-weight: bold;">Página 1 / 80</div>
        <button class="btn btn-next" onclick="move(1)" id="bNext">Próximo</button>
    </div>
</div>

<script>
    let cur = 1;
    const total = 80;
    const container = document.getElementById('pages-container');

    // CONTEÚDO DAS PÁGINAS PRINCIPAIS
    const specialPages = {
        1: { title: "O Código da Mente", content: "Bem-vinda à sua jornada de 80 dias de transformação neural. Prepare-se para decifrar seu comportamento.", img: "https://images.unsplash.com/photo-1559757175-5700dde675bc" },
        10: { title: "O Sistema Límbico", content: "Aqui nascem suas emoções. A amígdala funciona como um radar de ameaças.", img: "https://images.unsplash.com/photo-1507413245164-6160d8298b31" },
        40: { title: "Neuroplasticidade", content: "Seu cérebro nunca para de mudar. Você pode criar novos caminhos agora.", img: "https://images.unsplash.com/photo-1518152006812-edab29b069ac" },
        80: { title: "A Nova Você", content: "Parabéns por concluir. O conhecimento sem ação é apenas ilusão. Vamos para a mentoria?", img: "https://images.unsplash.com/photo-1522202176988-66273c2fd55f" }
    };

    // GERADOR AUTOMÁTICO DE 80 PÁGINAS
    for(let i=1; i<=total; i++) {
        let div = document.createElement('div');
        div.id = 'p'+i;
        div.className = 'page' + (i === 1 ? ' active' : '');
        
        let data = specialPages[i] || { 
            title: `Módulo ${i}: Consciência Expandida`, 
            content: `Aprofundando seus conhecimentos sobre o funcionamento cerebral nível ${i}.`,
            img: "https://images.unsplash.com/photo-1499750310107-5fef28a66643"
        };

        div.innerHTML = `
            ${i % 5 === 0 || i === 1 ? `<img src="${data.img}" class="img-box">` : ''}
            <h1>${data.title}</h1>
            <p>${data.content}</p>
            <div class="fact-card">Insight do Dia: O foco é um músculo que se fortalece com a prática diária.</div>
            <textarea placeholder="Escreva seus aprendizados da página ${i} aqui..." style="width:100%; padding:15px; border-radius:8px; border:1px solid #ccc;"></textarea>
        `;
        container.appendChild(div);
    }

    function move(step) {
        document.getElementById('p'+cur).classList.remove('active');
        cur += step;
        if(cur < 1) cur = 1;
        if(cur > total) cur = total;
        
        document.getElementById('p'+cur).classList.add('active');
        document.getElementById('fill').style.width = (cur/total*100) + '%';
        document.getElementById('pCount').innerText = `Página ${cur} / ${total}`;
        document.getElementById('bPrev').style.visibility = (cur === 1) ? 'hidden' : 'visible';
        document.getElementById('view').scrollTop = 0;
    }
    document.getElementById('bPrev').style.visibility = 'hidden';
</script>
</body>
</html>
